[user]
  name = Fergus Bremner
  email = "(none)"

[init]
  templatedir = ~/.git/templates

[push]
  default = matching

[alias]
  aa = add --all
  am = commit --amend
  br = branch
  ca = !git add -A && git commit -av
  ci = commit
  cl = clone --recursive
  co = checkout
  dc = diff --cached
  dh = diff HEAD
  dcheck = diff --check
  lc = log ORIG_HEAD --stat --no-merges
  lp = log --patch
  news = log -p HEAD@{1}..HEAD@{0}
  pls = !"git pull; git submodule foreach git pull origin master"
  st = status
  sup = submodule update --recursive
  who = shortlog -s

[core]
  editor = vim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  autocrlf = input
  repositoryformatversion = 0
  filemode = true
  bare = false
  logallrefupdates = true

[diff]
  tool = vimdiff
  diff-algorithm = patience

[difftool]
  prompt = false

[merge]
  tool = vimdiff
  log = true
  conflictstyle = diff3

[branch "master"]
  remote = origin
  merge = refs/heads/master

[apply]
  whitespace = fix

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

# vim:ft=gitconf
